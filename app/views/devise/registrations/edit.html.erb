<div class="register1">
</br>

  <h2>Editer <%= resource_name.to_s.humanize %></h2>


<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :Nom %><br />
    <%= f.text_field :name, autofocus: true %>
  </div>

  </br>
  <div class="field">
    <%= f.label :Email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>
  </br>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label :mot_de_passe %> <i>(laisser vide si vous ne voulez pas le changer)</i><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> caractères minimum</em>
    <% end %>
  </div>
  </br>

  <div class="field">
    <%= f.label :confirmation_du_mot_de_passe %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>
  </br>

  <div class="field">
    <%= f.label :mot_de_passe_actuel %> <i>(nous avons besoin de votre mot de passe actuel pour confirmer les changements)</i><br />
    <%= f.password_field :current_password, autocomplete: "current-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Modifer" %>
  </div>
<% end %>

<h3>Supprimer mon compte</h3>

<p>Mécontent? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Etes-vous sur ?" }, method: :delete %></p>

<%= link_to "Retour", :back %>

</div>