<div class="register1 g-content">

<div class="register-home container" >
  <br />
  <%= image_tag("male.png", :alt => "icon login") %>
<h2 class="h3 mb-3 font-weight-normal mt-2 mt-2">Connexion</h2>

<br />
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field form-label-group">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: ' xxxxxx@xxxcom'%>
  </div>
  <br />

  <div class="field">
    <%= f.password_field :password, autocomplete: "current-password", placeholder: 'Mot de passe : ******' %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field mt-4">
      <%= f.check_box :remember_me %>
      <%= f.label :Se_souvenir_de_moi %>
    </div>
  <% end %>
<br />
  <div class="actions">
    <%= f.submit "Se connecter" %>
  </div>
<% end %>
<br />
<%= render "devise/shared/links" %>
</div>
</div>
