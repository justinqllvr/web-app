<div class="row">
    <div class="col-md-6">
        <div class="city_pres">
            <div class="city_title">
                <h3>Les signalements Ã  <span class="city_name"><%= @city.name %></span></h3>
            </div>
            <ul class="nav nav-pills">
                <% Report.states.each do |key, value| %>
                <li class="nav-item">
                    <%= link_to t("report.state.#{key}"),
						city_path(@city, state: key),
						class: "nav-link b_city #{'active' if params[:state] == key}" 
					%>
                </li>
                <% end %>
            </ul>
        </div>
        <div class="report-list">
            <% if @reports.any? %>
            <%= render @reports %>
            <% end %>
        </div>
    </div>
    <div class="col-md-6 macarte">
        <div id="map" class="map-report"></div>
        <script>
            function initMap() {
                var map = new google.maps.Map(document.getElementById('map'), {
                    zoom: 13,
                });
                <% @reports.each do |report| %>
                var marker = new google.maps.Marker({
                    position: new google.maps.LatLng(<%= report.latitude %>, <%= report.longitude %>),
                    url: '<%= report_path(report) %>'
                });
                marker.setMap(map);
                <% end %>
                if (navigator.geolocation) {
                    navigator.geolocation.getCurrentPosition(function (position) {
                        var pos = {
                            lat: position.coords.latitude,
                            lng: position.coords.longitude
                        };
                        map.setCenter(pos);
                    });
                } else {
                    // Browser doesn't support Geolocation
                    var pos = {
                        lat: <%= @latitude ? @latitude : 44.841713 %>,
                        lng: <%= @longitude ? @longitude : -0.569101 %>
                    };
                }
                map.setCenter(pos);
            }   
