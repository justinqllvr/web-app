<h1 class="mt-5">Villes</h1>

<table class="table">
  <thead>
    <tr>
      <th>Nom</th>
      <th>Signalements</th>
    </tr>
  </thead>
  <tbody>
    <% @cities.each do |city| %>
      <tr>
        <td><%= link_to city.name, city %></td>
        <td><%= city.reports.count %></td>
      </tr>
    <% end %>
  </tbody>
</table>
