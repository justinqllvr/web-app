<div class="container g-content">
  <h1>Signalements prioritaires</h1>
  <br>
  <ul class="list-unstyled">
    <% @reports.each do |report| %>
      <li class="mb-5">
        <div class="row">
          <div class="col-md-6">
            <%= link_to report do %>
              <%= image_tag report.picture.url, class: 'img-fluid' %>
            <% end %>
          </div>
          <div class="col-md-4">
            <%= link_to report do %>
              <h2 class="mb-1"><%= report.title %></h2>
              <%= report.text %>
              <%= report.user %>
            <% end %>
          </div>
          <div class="col-md-2">
            <%= report.likes.count %> likes
            <% if current_user&.admin%>
            <%= link_to 'Destroy', report, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-primary'%>
            <%end%>
          </div>
        </div>
      </li>
    <%end%>
  </ul>
</div>


