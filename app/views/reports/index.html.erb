<h1>Reports</h1>

<table class="table">
  <thead>
    <tr>
      <th>Titre</th>
      <th>Description</th>
      <th>Latitude</th>
      <th>Longitude</th>
      <th>Likes</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @reports.each do |report| %>
      <tr>
        <td><%= report.title %></td>
        <td><%= report.text %></td>
        <td><%= report.latitude %></td>
        <td><%= report.longitude %></td>
        <td><%= report.likes.count %></td>
        <td><%= link_to 'Show', report %></td>
        <% if report.user == current_user or current_user.admin %>
          <td><%= link_to 'Edit', edit_report_path(report) %></td>
          <td><%= link_to 'Destroy', report, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
 </table>

<br>

<%= link_to 'New Report', new_report_path %>
